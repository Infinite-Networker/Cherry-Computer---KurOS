name: CI

on:
  push:
    branches: ["main", "genspark_ai_developer", "publish/**"]
  pull_request:
    branches: ["main"]

jobs:
  lint-and-test:
    name: Lint & Import check (Python ${{ matrix.python-version }})
    runs-on: ubuntu-latest
    strategy:
      fail-fast: false
      matrix:
        python-version: ["3.9", "3.10", "3.11", "3.12"]

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Python ${{ matrix.python-version }}
        uses: actions/setup-python@v5
        with:
          python-version: ${{ matrix.python-version }}
          cache: "pip"

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install textual rich

      - name: Check syntax (py_compile)
        run: |
          python -m py_compile main.py
          python -m py_compile src/kuros/__init__.py
          python -m py_compile src/kuros/app.py
          python -m py_compile setup.py
          echo "All files pass syntax check"

      - name: Import check
        run: |
          PYTHONPATH=src python -c "from kuros.app import KurOS, main; print('Import OK:', KurOS, main)"

      - name: Verify entry-point callable
        run: |
          PYTHONPATH=src python -c "
          import importlib, inspect
          mod = importlib.import_module('kuros.app')
          assert callable(getattr(mod, 'main', None)), 'kuros.app.main is not callable'
          print('Entry-point OK')
          "

  build:
    name: Build distribution
    runs-on: ubuntu-latest
    needs: lint-and-test

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"
          cache: "pip"

      - name: Install build tools
        run: pip install build twine

      - name: Build wheel and sdist
        run: python -m build

      - name: Check distribution with twine
        run: twine check dist/*

      - name: Upload build artifacts
        uses: actions/upload-artifact@v4
        with:
          name: dist
          path: dist/
